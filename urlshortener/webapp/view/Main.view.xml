<mvc:View xmlns:core="sap.ui.core" controllerName="com.urlshortener.grilo.urlshortener.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form">
    <form:Form id="mainForm" title="URL Shortener">
        <form:layout>
            <form:ColumnLayout >
            </form:ColumnLayout>        
        </form:layout>   
        <form:formContainers>
            <form:FormContainer >
                <form:formElements>
                    <form:FormElement label="URL to be shortened">
                        <Input id="originalUrl" textDirection="Inherit"></Input>
                    </form:FormElement>
                    <form:FormElement label="Customize your URL">
                        <Input id="urlCustom" value="www.shortthis.com/"></Input>
                        <Input id="urlCustomHash" value="12345678"></Input>
                    </form:FormElement>
                    <form:FormElement> 
                        <Button text="Hash" press="onHashPress"></Button>
                        <Button text="Delete" press="onDeletePress"></Button>
                    </form:FormElement>
                </form:formElements>
            </form:FormContainer>
        </form:formContainers>
    
    </form:Form>
    

</mvc:View>